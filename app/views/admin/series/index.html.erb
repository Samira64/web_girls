<h1>All series</h1>
<%= link_to "Create series", new_series_url %><br><br>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>view_count</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <% @series.each do |series| %>
        <tr>
            <td>
                 <%= series.id %>
            </td>
            <td>
                <%= series.title %>
            </td>
            <td>
                <%=  series.videos.count %>
            </td>       
            <td>
                <%= link_to "Edit", edit_series_url(series) %>
            </td>  
            <td>
                <%= link_to "View", series_videos_url(series) %>
            </td> 
            <td>
                <%= link_to series, :method => :delete, data: {confirm: "are your sure?"} do %>
                <%= octicon("trashcan", :height => 32,  :class => "right left", :"aria-label" => "hi") %>
                <% end %>
            </td>  
              
       </tr>
   <% end %>
</table>



